        "height": {
            "min": 1,
            "max": 2048,
            "step": 1,
            "default": 2048
        },
        "offset_x": {
            "min": 0,
            "max": 2048,
            "step": 1,
            "default": 0
        },
        "offset_y": {
            "min": 0,
            "max": 2048,
            "step": 1,
            "default": 0
