{
    "window": {
        "initial_width": 1200,
        "initial_height": 800,
        "title": "ColloidCam",
        "background_color": "#2b2b2b",
        "margins": {
            "left": 0,
            "top": 0,
            "right": 0,
            "bottom": 0
        },
        "spacing": 0
    },
    "container": {
        "margins": {
            "left": 0,
            "top": 0,
            "right": 0,
            "bottom": 0
        },
        "spacing": 0
    },
    "toolbar": {
        "height": 32,
        "icon_size": 19,
        "background_color": "#333",
        "icons": {
            "start_stream": "fa5s.play",
            "stop_stream": "fa5s.stop",
            "start_recording": "fa5.dot-circle",
            "snapshot": "fa5s.camera"
        }
    },
    "status_bar": {
        "labels": {
            "camera_model": "No Camera",
            "roi_data": "0x0",
            "framerate": "@ 0 Hz",
